{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "watch",
                "--project",
                "./Assets/Sources/fslib/fslib.fsproj",
                "build"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": {
                "base": "$msCompile",
                "background": {
                    "beginsPattern": "^\\s*watch\\s*:\\s*Started",
                    "endsPattern": "^\\s*watch\\s*:\\s*Exited"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}